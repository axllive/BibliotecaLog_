@model BibliotecaLog.Models.BookViewModel

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes do livro:</h1>

<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Título do livro:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            Sinopse:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Está emprestado?
        </dt>
            @if (Model.IsBorrowed)
            {
            <dd class="col-sm-2">
                    <i class="fas fa-thumbs-up"></i>
            </dd>
            }
            else
            {
            <dd class="col-sm-2">
                    <i class="fas fa-thumbs-down"></i>
            </dd>
            }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar livro</a> |
    <a asp-action="Index">Voltar para lista dos livros</a>
</div>
